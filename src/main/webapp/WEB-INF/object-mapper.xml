<?xml version="1.0" encoding="UTF-8"?>
<beans>
	<!-- Mybatis SqlSessionFactory 설정-->
	<bean type="component" name="sqlSessionFactory" class="kr.or.kosta.reservationmall.common.factory.SqlSessionFactoryCreator">
		<property name="configLocation" value="mybatis-config.xml"/>
		<property name="environment" value="development"/>
	</bean>
	
	<bean type="dao" name="userDao" class="kr.or.kosta.reservationmall.user.dao.MybatisUserDao">
		<property name="sqlSessionFactory" ref="sqlSessionFactory"/>
	</bean>
	
	<bean type="service" name="userService" class="kr.or.kosta.reservationmall.user.service.UserServiceImpl">
		<property name="userDao" ref="userDao"/>
	</bean>
</beans>